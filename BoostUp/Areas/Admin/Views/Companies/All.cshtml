@model IEnumerable<CompanyServiceModel>

@{
    ViewBag.Title = "Approve companies";
}

<table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
        <tr class="text-center">
            <th scope="col">Id</th>
            <th scope="col">Logo</th>
            <th scope="col">Name</th>
            <th scope="col">Founded</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <th scope="row">@company.Id</th>
                <td>
                    @if (company.LogoUrl != null)
                    {
                    <img class="rounded-circle img-thumbnail shadow" width="45" height="45" src="@company.LogoUrl" alt="@company.Name - Logo">
                    }
                    else
                    {
                        <img class="rounded-circle img-thumbnail shadow" width="45" height="45" src="~/default pictures/Company Logo.jpg" alt="@company.Name - Logo">
                    }
                </td>
                <td>@company.Name</td>
                <td>@company.Founded</td>
                <td>@company.Country</td>
                <td>@company.City</td>
                <td>
                    <div class="text-center">
                        <a asp-action="Approve" asp-controller="Companies" asp-route-id="@company.Id" class="btn btn-outline-success shadow ml-2">Approve</a>
                        <a asp-area=""
                           asp-action="Details"
                           asp-controller="Companies"
                           asp-route-id="@company.Id"
                           asp-route-information="@company.CompanyInformation()" class="btn btn-outline-primary shadow ml-2">Details</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
