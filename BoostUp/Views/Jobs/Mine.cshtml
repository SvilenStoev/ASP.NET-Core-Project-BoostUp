@model IEnumerable<JobServiceModel>

@{
    ViewBag.Title = "My jobs";
    ViewBag.AllowJobEdit = true;
}

@if (!Model.Any())
{
    <h3 class="text-center mt-5">You do not have any jobs posted yet!</h3>
    <h2 class="text-center mb-5"> &#x1F62D;</h2>
}
else
{
    <div class="offset-sm-3 col-sm-6 offset-md-4 col-md-4 mt-4 mb-5"><h2 class="heading-margin text-center">@ViewBag.Title</h2></div>
}

<partial name="_JobsPartial" model="@Model" />