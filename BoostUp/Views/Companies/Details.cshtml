@model CompanyDetailsViewModel

@{
    ViewData["Title"] = $"{Model.Name}: Details";
}

<div class="card row offset-lg-1 col-lg-10">
    <div class="card-header">
        <div class="card bg-light mb-2" style="max-width: 12rem;">
            <div class="card-header">
                <div>
                    @if (Model.LogoUrl != null)
                    {
                        <img class="card-img-top" src="@Model.LogoUrl" alt="@Model.Name - Logo">
                    }
                    else
                    {
                        <img class="card-img-top" src="~/default pictures/Company Logo.jpg" alt="@Model.Name - Logo">
                    }
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-outline-primary">Jobs</a>
        <a href="#" class="btn btn-outline-primary">Employees</a>
        <a asp-controller="Jobs" asp-action="Add" class="btn btn-outline-primary">Post a job</a>
    </div>
    <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <a href="#" class="btn btn-outline-primary">Go somewhere</a>
    </div>
    <div class="card-footer text-muted">
        2 days ago
    </div>
</div>