@model IndexViewModel

@{
    ViewData["Title"] = "Home";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 text-center" src="~/default pictures/Index Picture 1.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h4 class="p-3 mb-2 bg-secondary text-white">Take your career path to the next level.</h4>
                <h5 class="p-3 mb-2 bg-secondary text-white">Choose the best professional community.</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/default pictures/Index Picture 2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="p-3 mb-2 bg-dark text-white"><a asp-action="Index" asp-controller="Home">BoostUp</a> your professional life</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron jumbotron-fluid">
    <div class="row">
        <h3 class="col-3 text-center">
            @Model.TotalCompanies
            @(Model.TotalCompanies == 1 ? "Company" : "Companies")
        </h3>
        <h3 class="col-3 text-center">
            @Model.TotalJobs
            @(Model.TotalJobs == 1 ? "Job" : "Jobs")
        </h3>
        <h3 class="col-3 text-center">
            @Model.TotalUsers
            @(Model.TotalUsers == 1 ? "User" : "Users")
        </h3>
        <h3 class="col-3 text-center">
            @Model.TotalRecruiters
            @(Model.TotalRecruiters == 1 ? "Recruiter" : "Recruiters")
        </h3>
    </div>
</div>
