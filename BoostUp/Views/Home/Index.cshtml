@{
    ViewData["Title"] = "Boost your career path";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/default pictures/Index Picture 0.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Take your career path and professional development to the next level.</h5>
                <p>Choose the best professional work environment.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/default pictures/Index Picture 1.webp" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>BoostUp your professional community</h5>
                <p>...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/default pictures/Index Picture 2.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-primary" asp-controller="Home" asp-action="Index">Let’s start your profile.</a></h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>