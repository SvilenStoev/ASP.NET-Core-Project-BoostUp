@model IndexViewModel

@{
    ViewData["Title"] = "Home";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100 text-center" src="~/default pictures/Index Picture 1.png" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h4 class="p-3 mb-2 bg-secondary text-white">Take your career path to the next level.</h4>
                <h5 class="p-3 mb-2 bg-secondary text-white">Choose the best professional community.</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/default pictures/Index Picture 2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="p-3 mb-2 bg-dark text-white"><a asp-action="Index" asp-controller="Home">BoostUp</a> your professional life</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="jumbotron jumbotron-fluid text-center shadow">
        <ul class="list-inline mb-0">
            <li class="list-inline-item col-lg-2 col-sm-4">
                <h3 class="font-weight-bold mb-0 d-block">@Model.TotalCompanies</h3>
                <h4 class="text-muted">@(Model.TotalCompanies == 1 ? "Company" : "Companies")</h4>
            </li>
            <li class="list-inline-item col-lg-2 col-sm-4">
                <h3 class="font-weight-bold mb-0 d-block">@Model.TotalJobs</h3>
                <h4 class="text-muted">@(Model.TotalJobs == 1 ? "Job" : "Jobs")</h4>
            </li>
            <li class="list-inline-item col-lg-2 col-sm-4">
                <h3 class="font-weight-bold mb-0 d-block">@Model.TotalUsers</h3>
                <h4 class="text-muted">@(Model.TotalUsers == 1 ? "User" : "Users")</h4>
            </li>
            <li class="list-inline-item col-lg-2 col-sm-4">
                <h3 class="font-weight-bold mb-0 d-block">@Model.TotalRecruiters</h3>
                <h4 class="text-muted">@(Model.TotalRecruiters == 1 ? "Recruiter" : "Recruiters")</h4>
            </li>
        </ul>
</div>